@model List<PaymentAutomationLC.Models.PaymentProfile>
@{
    ViewData["Title"] = "Settings";
}

<h1>Payment Profiles</h1>

@if(Model.Count != 0)
{
    <table class="table">
        <tr>
            <th>Name</th>
            <th>Pay/Article</th>
            <th>Article Bonus</th>
            <th>Minimum PV for Bonus</th>
        </tr>

        @foreach (var profile in Model)
        {
            <tr>
                <td>@profile.Name</td>
                <td>@profile.PayPerArticle</td>
                <td>@profile.ArticleBonus</td>
                <td>@profile.MinimumPVForBonus</td>
                <td>
                    <a asp-controller="Payment" asp-action="EditProfile" asp-route-id="@profile.ID">Edit</a>
                </td>
            </tr>
        }
    </table>
} else  
{
    <p>No payment profiles</p>
    <a asp-controller="Payment" asp-action="AddProfile">Add profile</a>
}
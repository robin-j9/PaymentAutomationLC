@model List<PaymentAutomationLC.Models.PaymentProfile>
@{
    ViewData["Title"] = "Settings";
}

<h1>Payment Profiles</h1>

@if(Model.Count != 0)
{
    <table>
        <tr>
            <th>Name</th>
            <th>Pay/Article</th>
            <th>Article Bonus</th>
            <th>Minimum PV for Bonus</th>
        </tr>

        @foreach (var profile in Model)
        {
            <tr>@profile.Name</tr>
            <tr>@profile.PayPerArticle</tr>
            <tr>@profile.ArticleBonus</tr>
            <tr>@profile.MinimumPVForBonus</tr>
            <tr>
                <a asp-controller="Payment" asp-action="EditProfile">Edit</a>
            </tr>
        }
    </table>
} else  
{
    <p>No payment profiles</p>
    <a asp-controller="Payment" asp-action="AddProfile">Add profile</a>
}
@model PaymentAutomationLC.ViewModels.ViewUsersViewModel
@{
    ViewData["Title"] = "Index";
}

<h1>All Users</h1>

<table class="table">
    <tr>
        <th>Role</th>
        <th>Name</th>
        <th>Email</th>
        <th>Date Joined</th>
        <th>Payment Profile</th>
    </tr>
    @for(int i = 0; i < Model.Users.Count(); i++)
    {
        <tr>
            <td>@Model.Roles[i][0]</td>
            <td>@Model.Users.ToList()[i].FirstName @Model.Users.ToList()[i].LastName</td>
            <td>@Model.Users.ToList()[i].Email</td>
            <td>@Model.Users.ToList()[i].DateAdded</td>
            <td>@Model.Users.ToList()[i].PaymentProfile</td>
        </tr>
    }
</table>